{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "engines": {
    "node": "v16.13.0"
  },
  "targets": {
    "app": {
      "engines": {
        "browsers": "> 0.25%"
      },
      "context": "browser"
    }
  },
  "scripts": {
    "dev": "parcel src/index.html --no-cache --open",
    "restart": "rimraf -rf ./dist && yarn run dev --open",
    "build": "parcel build src/index.html --no-cache",
    "start": "yarn run build && node server.js",
    "typescript": "tsc --noEmit",
    "eslint": "eslint .",
    "stylelint": "stylelint .",
    "test": "mocha --require ts-node/register --require ./mochaSetup.js './src/**/*.test.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/likeariverstream/middle.messenger.praktikum.yandex.git"
  },
  "baseUrl": "/",
  "author": "Sergey Kalachev",
  "license": "ISC",
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars-precompile": "1.0.1",
    "@parcel/transformer-inline-string": "2.8.3",
    "@types/chai": "^4.3.4",
    "@types/jsdom": "^21.1.1",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.13",
    "@types/uuid": "9.0.1",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.54.0",
    "chai": "4.3.7",
    "eslint": "8.35.0",
    "eslint-config-airbnb": "19.0.4",
    "jsdom": "^21.1.1",
    "mocha": "^9.2.1",
    "parcel": "2.8.3",
    "postcss": "8.4.21",
    "postcss-import": "15.1.0",
    "postcss-nested": "6.0.0",
    "postcss-simple-vars": "7.0.1",
    "sinon": "^15.0.3",
    "stylelint": "15.2.0",
    "stylelint-config-standard": "30.0.1",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "express": "4.18.2",
    "glob-parent": "6.0.2",
    "handlebars": "4.7.7",
    "highlight.js": "11.7.0",
    "uuid": "9.0.0"
  }
}
