{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "target": "es2020",
        "declaration": false,
        "strictNullChecks": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "exclude": [
        "node_modules",
        ".parcel-cache",
        "dist"
    ]
}